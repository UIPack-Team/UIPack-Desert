  "button_content_panel": {
    "type": "panel",
    "controls": [
      {
        "content@$button_content": {
          "layer": 10
        }
      }
    ]
  },

  "default_button_panel": {
    "type": "panel",
    "$button_size|default": ["100%", "100%"],
    "$button_color|default": [0.5, 0.5, 0.5],
    "$button_alpha|default": 0.8,
    "$button_type_panel|default": "common.empty_panel",
    "$shadow_visible|default": false,
    "controls": [
      {
        "botton_controls": {
          "type": "panel",
          "size": "$button_size",
          "controls": [
            {
              "button_bg": {
                "type": "image",
                "texture": "contents/resource/screen_bg",
                "color": "$button_color",
                "alpha": "$button_alpha",
                "layer": 1
              }
            },
            {
              "button_content": {
                "type": "panel",
                "controls": [
                  {
                    "$button_type_panel@$button_type_panel": {
                      "layer": 3
                    }
                  }
                ]
              }
            },
            {
              "shadow_texture": {
                "type": "image",
                "layer": 1,
                "texture": "contents/resource/screen_shadow",
                "size": ["100% + 20px", "100% + 20px"],
                "ignored": "(not $shadow_visible)"
              }
            }
          ]
        }
      }
    ]
  },

  "content_button@ui.button": {
    "layer": 5,

    "locked_control": "locked",

    "$default_font|default": "default",
    "$font_type": "$default_font",
    "$locked_alpha": 1,

    "$button_type_panel|default": "ui.button_content_panel",
    "$button_content|default": "common.empty_panel",
    "$button_state_panel|default": "ui.default_button_panel",

    "$default_button_color|default": [0.8, 0.8, 0.8],
    "$default_button_alpha|default": 0.9,
    "$default_text_color|default": [0, 0, 0],

    "$hover_button_color|default": [1.0, 1.0, 1.0],
    "$hover_button_alpha|default": 0.9,
    "$hover_text_color|default": [0, 0, 0],

    "$pressed_button_color|default": [1.0, 1.0, 1.0],
    "$pressed_button_alpha|default": 0.9,
    "$pressed_text_color|default": [0, 0, 0],

    "$locked_button_color|default": [0.5, 0.5, 0.5],
    "$locked_button_alpha|default": 0.8,
    "$locked_text_color|default": [0.2, 0.2, 0.2],

    // These states are for passing the button state to the button content - do not set these in a parent!
    "$default_state|default": false,
    "$hover_state|default": false,
    "$pressed_state|default": false,
    "$locked_state|default": false,

    "controls": [
      {
        "default@$button_state_panel": {
          "$button_size": ["100%", "100%"],
          "$button_color": "$default_button_color",
          "$button_alpha": "$default_button_alpha",
          "$text_color": "$default_text_color",
          "$default_state": true,
          "layer": 1
        }
      },
      {
        "hover@$button_state_panel": {
          "$button_size": ["100%+4%", "100%"],
          "$button_color": "$hover_button_color",
          "$button_alpha": "$hover_button_alpha",
          "$text_color": "$hover_text_color",
          "$shadow_visible": true,
          "$hover_state": true,
          "layer": 2
        }
      },
      {
        "pressed@$button_state_panel": {
          "$button_size": ["100%", "100%"],
          "$button_color": "$pressed_button_color",
          "$button_alpha": "$pressed_button_alpha",
          "$text_color": "$pressed_text_color",
          "$pressed_state": true,
          "layer": 3
        }
      },
      {
        "locked@$button_state_panel": {
          "$button_size": ["100%", "100%"],
          "$button_color": "$locked_button_color",
          "$button_alpha": "$locked_button_alpha",
          "$text_color": "$locked_text_color",
          "$locked_state": true,
          "layer": 1
        }
      }
    ]
  },

