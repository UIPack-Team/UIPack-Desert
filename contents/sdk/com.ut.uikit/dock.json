{
  "namespace": "ui",

  "dock_exit_animation_push_offset": {
    "anim_type": "offset",
    "easing": "out_cubic",
    "duration": 0.25,
    "from": [0, -5],
    "to": [0, 42],
    "play_event": "screen.exit_push",
    "end_event": "screen.exit_end"
  },

  "dock_exit_animation_pop_offset": {
    "anim_type": "offset",
    "easing": "out_cubic",
    "duration": 0.25,
    "from": [0, -5],
    "to": [0, 42],
    "play_event": "screen.exit_pop",
    "end_event": "screen.exit_end"
  },

  "dock_entrance_animation_push_offset": {
    "anim_type": "offset",
    "easing": "out_cubic",
    "duration": 0.5,
    "from": [0, 42],
    "to": [0, -5],
    "play_event": "screen.entrance_push",
    "end_event": "screen.entrance_end"
  },

  "dock_entrance_animation_pop_offset": {
    "anim_type": "offset",
    "easing": "out_cubic",
    "duration": 0.5,
    "from": [0, 42],
    "to": [0, -5],
    "play_event": "screen.entrance_pop",
    "end_event": "screen.entrance_end"
  },

  "dock_background": {
    "type": "image",
    "alpha": 0.9,
    "texture": "textures/ui/dock_background"
  },

  "dock_bar": {
    "type": "panel",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "layer": 100,
    "$button_1|default": "dock_bar.settings_button",
    "$hide_spacer_1|default": false,
    "$button_2|default": "dock_bar.achievements_button",
    "$hide_spacer_2|default": false,
    "$button_3|default": "dock_bar.play_button",
    "$hide_spacer_3|default": false,
    "$button_4|default": "dock_bar.skins_button",
    "$hide_spacer_4|default": false,
    "$button_5|default": "dock_bar.store_button",
    "$hide_spacer_5|default": true,
    "$button_6|default": "dock_bar.no_button",
    "$hide_spacer_6|default": true,
    "$button_7|default": "dock_bar.no_button",
    "$hide_spacer_7|default": true,
    "$button_8|default": "dock_bar.no_button",
    "$hide_spacer_8|default": true,
    "$button_9|default": "dock_bar.no_button",
    "size": ["100%c", "100%"],
    "animation_reset_name": "screen_animation_reset",
    "anims": [
      "@ui.dock_exit_animation_push_offset",
      "@ui.dock_exit_animation_pop_offset",
      "@ui.dock_entrance_animation_push_offset",
      "@ui.dock_entrance_animation_pop_offset"
    ],
    "controls": [
      {
        "shadow_texture": {
          "type": "image",
          "layer": 2,
          "nineslice_size": 20,
          "base_size": [100, 100],
          "texture": "textures/ui/window_shadow",
          "size": ["100%c + 20px", "100%c + 20px"],
          "controls": [
            {
              "frame": {
                "type": "image",
                "texture": "textures/ui/Frame",
                "size": ["100%c + 2px", "100%c + 2px"],
                "controls": [
                  {
                    "dock_background@all_bg": {
                      "$all_bg_color": "$dock_color",
                      "$all_bg_alpha": 0.9,
                      "size": ["100%c", "37px"],
                      "controls": [
                        {
                          "stacked_row": {
                            "type": "stack_panel",
                            "size": ["100%c", 25],

                            "orientation": "horizontal",
                            "controls": [
                              {
                                "action_button_spacer_0": {
                                  "type": "panel",
                                  "size": [6, 0]
                                }
                              },
                              {
                                "button_1@$button_1": {}
                              },
                              {
                                "action_button_spacer_1": {
                                  "type": "panel",
                                  "ignored": "$hide_spacer_1",
                                  "size": [6, 0]
                                }
                              },
                              {
                                "button_2@$button_2": {}
                              },
                              {
                                "action_button_spacer_2": {
                                  "type": "panel",
                                  "ignored": "$hide_spacer_2",
                                  "size": [6, 0]
                                }
                              },
                              {
                                "button_3@$button_3": {}
                              },
                              {
                                "action_button_spacer_3": {
                                  "type": "panel",
                                  "ignored": "$hide_spacer_3",
                                  "size": [6, 0]
                                }
                              },
                              {
                                "button_4@$button_4": {}
                              },
                              {
                                "action_button_spacer_4": {
                                  "type": "panel",
                                  "ignored": "$hide_spacer_4",
                                  "size": [6, 0]
                                }
                              },
                              {
                                "button_5@$button_5": {}
                              },
                              {
                                "action_button_spacer_9": {
                                  "type": "panel",
                                  "size": [6, 0]
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}
